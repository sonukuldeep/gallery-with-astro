---
import logo from "./images/logo.png";
---

<footer>
    <div class="imageContainer"><img src={logo} alt="logo"></div>
    <div >
        <ul class='copyright'>
            <li>2022 &#169; EasternDev All rights reserved</li>
            <li>Legal Notes</li>
        </ul>
    </div>
    <div class='fontawesomeicons'>
        <i class="fa-brands fa-square-facebook"></i>
        <i class="fa-brands fa-square-twitter"></i>
        <i class="fa-brands fa-instagram"></i>
    </div>
</footer>

<style>
    footer {
        /* background-color: var(--color-primary); */
        color: #fff;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        height: 4rem;
        position: relative;
        overflow: hidden;
    }
    footer::before {
        content: "";
        background-image: linear-gradient(#da4898,#4d70da);
        display: block;
        position: absolute;
        width: 100%;
        height: 1000px;
        z-index: -1;
        rotate: -30deg;
    }

    .imageContainer img {
        width: 30px;
    }
    .fontawesomeicons i{
        padding: 0 2px;
        cursor: pointer;
    }

    @media (width > 768px) {
        .copyright {
            display: flex;
        }
        .fontawesomeicons i {
            font-size: 25px;
        }
    }
    @media (width < 768px) {
        .imageContainer {
            display: none;
        }
    }
</style>
